{
  "devDependencies": {
    "eslint": "^7.21.0",
    "@open-wc/eslint-config": "^4.2.0",
    "@typescript-eslint/parser": "^4.16.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "prettier": "^2.2.1",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "@web/test-runner": "^0.12.15",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/building-rollup": "^1.9.4",
    "deepmerge": "^4.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "@web/dev-server": "^0.1.8",
    "concurrently": "^5.3.0",
    "typescript": "^4.2.3",
    "tslib": "^2.1.0",
    "@types/google.analytics": "0.0.40",
    "@types/i18next": "^13.0.0",
    "@types/linkifyjs": "^2.1.3",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "13.11.1",
    "@types/chart.js": "^2.9.23",
    "@types/hammerjs": "^2.0.36"

  },
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\""
  },
  "name": "cs-web-app",
  "version": "0.0.0",
  "description": "Webcomponent cs-web-app following open-wc recommendations",
  "author": "cs-web-app",
  "license": "MIT",
  "dependencies": {
    "lit-html": "^1.3.0",
    "lit-element": "^2.4.0",
    "@kano/twemoji": "^1.0.0",
    "@manufosela/stars-rating": "^3.3.3",
    "@material/mwc-button": "^0.20.0",
    "@material/mwc-circular-progress-four-color": "^0.20.0",
    "@material/mwc-dialog": "^0.20.0",
    "@material/mwc-drawer": "^0.20.0",
    "@material/mwc-fab": "^0.20.0",
    "@material/mwc-formfield": "^0.20.0",
    "@material/mwc-icon": "^0.20.0",
    "@material/mwc-icon-button": "^0.20.0",
    "@material/mwc-menu": "^0.20.0",
    "@material/mwc-snackbar": "^0.20.0",
    "@material/mwc-tab-bar": "^0.20.0",
    "@material/mwc-textarea": "^0.20.0",
    "@material/mwc-textfield": "^0.20.0",
    "@material/mwc-top-app-bar": "^0.20.0",
    "app-datepicker": "^4.1.0",
    "chart.js": "^2.9.3",
    "hammerjs": "^2.0.8",
    "i18next-http-backend": "^1.0.16",
    "linkifyjs": "^2.1.9",
    "lit-flexbox-literals": "0.0.7",
    "pwa-helpers": "^0.9.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
